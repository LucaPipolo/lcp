mixin section(name, description)
  section(class='section__#{name}')
    .section__col--left
      h1 #{name}
      h2 #{description}
    .section__col--right
      case name
        when 'intro'
          include _section_intro
        when 'expertise'
          include _section_expertise
        when 'skills'
          include _section_skills
        when 'experience'
          include _section_experience
        when 'education'
          include _section_education
        when 'profiles'
          include _section_profiles
        when 'portfolio'
          include _section_portfolio
        when 'contact'
          include _section_contact

mixin expertise(...elements)
  each element in elements
    .expertise__element
      h1= element.title
      p= element.text

mixin timeline(...elements)
  .timeline
    each element in elements
      .timeline__element
        .timeline__point
        .timeline__header
          time= element.time
          h1= element.title
          h2= element.role
          h3= element.place
        .timeline__content
          p= element.description

mixin contact(...details)
  .contact__details
    each detail in details
      .contact__detail
        h3= detail.name
        if detail.link == 'false'
          p= detail.description
        else
          p #[a(href='#{detail.link}') #{detail.description}] 
          
mixin socials(...socials)
  ul.socials
    each social in socials
      li.social__element
        a(href='#{social.url}', alt='#{social.name}', target='_blank')
          i(class='icon-#{social.name}')
